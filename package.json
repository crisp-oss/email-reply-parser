    "test": "npm run unit && npm run lint"
  },
  "engines": {
    "node": ">= 20.0.0"
  },
  "author": "Crisp IM SAS",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "22.13.10",
    "@typescript-eslint/eslint-plugin": "8.39.1",
    "typescript": "5.9.2",
    "eslint": "9.29.0",
    "eslint-plugin-crisp": "1.1.13",
    "eslint-plugin-jsdoc": "54.1.0",
    "nodeunit": "v0.11.3",
    "re2": "1.22.1",
    "redos-detector": "^6.1.2",
    "safe-regex": "^2.1.1",
    "underscore": "v1.13.6"
  },
  "peerDependencies": {
    "re2": "1.22.1"
